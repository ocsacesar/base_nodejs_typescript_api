{
  "name": "base_nodejs_typescript_api",
  "version": "1.0.0",
  "description": "Project used as a basis for API creation with Hapi, JWT, Typescript and SequelizeJS",
  "main": "node server.js",
  "repository": {
    "url": "https://github.com/ocsacesar/base_nodejs_typescript_api.git"
  },
  "scripts": {
    "tsc": "tsc",
    "tsc-watch": "tsc -w",
    "build": "gulp build",
    "start": "gulp build && node build/src/index.js",
    "dev": "gulp build && node build/src/index.js -e dev",
    "prod": "gulp build && node build/src/index.js -e prod",
    "test": "gulp build && node build/src/index.js -e test",
    "setup": "npm install & typings install",
    "watch": "nodemon --watch build/src build/src/index.js"
  },
  "keywords": [
    "api",
    "nodejs",
    "typescript",
    "hapi"
  ],
  "author": "Ovídio César",
  "license": "MIT",
  "dependencies": {
    "@hapi/inert": "5.2.0",
    "@types/minimist": "1.2.0",
    "bcryptjs": "2.4.3",
    "boom": "7.3.0",
    "colors": "1.3.3",
    "hapi": "18.0.0",
    "hapi-auth-jwt2": "8.3.0",
    "hapi-swagger": "10.0.2",
    "inert": "5.1.2",
    "joi": "14.3.1",
    "jsonwebtoken": "8.4.0",
    "nconf": "0.9.1",
    "pg": "7.4.0",
    "reflect-metadata": "0.1.10",
    "sequelize": "4.27.0",
    "sequelize-typescript": "0.6.1",
    "vision": "5.4.4"
  },
  "devDependencies": {
    "@types/node": "8.0.57",
    "gulp": "4.0.0",
    "gulp-env": "0.4.0",
    "gulp-mocha": "6.0.0",
    "gulp-rimraf": "0.2.1",
    "gulp-shell": "0.6.5",
    "gulp-tslint": "8.1.2",
    "tslint": "5.8.0",
    "typescript": "2.6.2"
  }
}
